# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           net.girkin.gomoku.HomeController.index
GET     /auth/login                 net.girkin.gomoku.HomeController.login
GET     /auth/logout                net.girkin.gomoku.HomeController.logout
GET     /auth/google                net.girkin.gomoku.HomeController.googleAuth
GET     /auth/googlecallback        net.girkin.gomoku.HomeController.googleCallback

GET     /test                       net.girkin.gomoku.HomeController.test

#Game routes
GET     /game                       net.girkin.gomoku.GameController.index
GET     /game/joinRandom            net.girkin.gomoku.GameController.joinRandomGame
GET     /game/:id/connect           net.girkin.gomoku.GameController.socketConnect(id: java.net.girkin.gomoku.util.UUID)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               net.girkin.gomoku.controllers.Assets.at(path="/public", file)